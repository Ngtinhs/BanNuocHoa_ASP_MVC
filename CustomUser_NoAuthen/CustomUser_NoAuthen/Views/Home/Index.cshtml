@model IEnumerable<CustomUser_NoAuthen.Models.SanPham>
@{
    ViewBag.Title = "Trang chủ";
}

<div class="row">
    <img class="w-100" src="~/Images/home.jpg" alt="Error" />
</div>

<br />

<div class="row">
    <h4 class="m-2">Các sản phẩm mới</h4>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="col-lg-3">
                <a href="@Url.Action("ChiTiet", "SanPham", new { id =  item.ProductId })">
                    <div class="hover-shadow rounded px-2 py-2">
                        <div>
                            @{ string path = "~/Images/P_Images/" + item.Thumnail; }
                            <img class="d-block mx-auto center-crop w-90 as-square" src=@Url.Content(path) alt="Error" />
                        </div>
                        <div class="linetext-2 my-2 text-justify" style="height:3em;">
                            <span>@Html.DisplayFor(modelItem => item.Name)</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <b>@String.Format("{0:n0}", int.Parse(Html.DisplayFor(modelItem => item.Price).ToString())).Replace(',', '.') <u>đ</u></b>
                            </div>
                            @if (item.Discount > 0)
                            {
                                <div class="text-danger border border-danger px-2">-@Html.DisplayFor(modelItem => item.Discount)%</div>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>
